<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.GameSelectionActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:id="@+id/testoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scegli il gioco"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp" />

    <!-- Primo gioco -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGame1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Icona -->
            <ImageView
                android:id="@+id/imgGame1"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/game_1"
                android:src="@drawable/logo_gioco1" />

            <!-- Titolo -->
            <TextView
                android:id="@+id/txtGame1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/game_1"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imgGame1"
                app:layout_constraintTop_toTopOf="@id/imgGame1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/imgGame1"
                android:paddingStart="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Secondo gioco -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGame2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Icona -->
            <ImageView
                android:id="@+id/imgGame2"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/game_2"
                android:src="@drawable/logo_gioco2" />

            <!-- Titolo -->
            <TextView
                android:id="@+id/txtGame2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/game_2"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imgGame2"
                app:layout_constraintTop_toTopOf="@id/imgGame2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/imgGame2"
                android:paddingStart="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Terzo gioco -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardGame3"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:clickable="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <!-- Icona -->
            <ImageView
                android:id="@+id/imgGame3"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/game_3"
                android:src="@drawable/logo_gioco3" />

            <!-- Titolo -->
            <TextView
                android:id="@+id/txtGame3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/game_3"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imgGame3"
                app:layout_constraintTop_toTopOf="@id/imgGame3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/imgGame3"
                android:paddingStart="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>